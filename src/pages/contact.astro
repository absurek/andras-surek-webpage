---
import Layout from '@/layouts/Layout.astro';

import TablerBrandGMail from '@/components/icons/TablerBrandGMail.astro';
import TablerBrandGitHub from '@/components/icons/TablerBrandGitHub.astro';
import TablerBrandLinkedIn from '@/components/icons/TablerBrandLinkedIn.astro';
---

<Layout title="Surek András — Kapcsolat">
  <section id="card" class="flex justify-center">
    <div class="rounded-lg border bg-card text-card-foreground shadow-sm">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-2xl font-semibold leading-none tracking-tight">
          Surek András Balázs
        </h3>
        <p class="text-sm text-muted-foreground">Full-stack fejlesztő</p>
      </div>

      <div class="p-6 pt-0 grid gap-1">
        <ul>
          <li>
            <a
              class="-mx-2 flex items-start space-x-4 rounded-md p-2 transition-all hover:bg-accent hover:text-accent-foreground"
              href="mailto:surek.andras@gmail.com"
            >
              <TablerBrandGMail />
              <div class="space-y-1">
                <p class="text-sm font-medium leading-none">
                  surek.andras@gmail.com
                </p>
                <p class="text-sm text-muted-foreground">E-mail</p>
              </div>
            </a>
          </li>
          <li>
            <a
              class="-mx-2 flex items-start space-x-4 rounded-md p-2 transition-all hover:bg-accent hover:text-accent-foreground"
              target="_blank"
              href="https://www.linkedin.com/in/absurek/"
            >
              <TablerBrandLinkedIn />
              <div class="space-y-1">
                <p class="text-sm font-medium leading-none">
                  https://www.linkedin.com/in/absurek/
                </p>
                <p class="text-sm text-muted-foreground">LinkedIn</p>
              </div>
            </a>
          </li>
          <li>
            <a
              class="-mx-2 flex items-start space-x-4 rounded-md p-2 transition-all hover:bg-accent hover:text-accent-foreground"
              target="_blank"
              href="http://github.com/absurek"
            >
              <TablerBrandGitHub />
              <div class="space-y-1">
                <p class="text-sm font-medium leading-none">
                  http://github.com/absurek
                </p>
                <p class="text-sm text-muted-foreground">GitHub</p>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </section>
</Layout>
