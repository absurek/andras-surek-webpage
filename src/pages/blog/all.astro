---
import { getCollection } from 'astro:content';

import Layout from '@/layouts/Layout.astro';
import BlogPostPreview from '@/components/BlogPostPreview.astro';
import Link from '@/components/ui/Link.astro';

const posts = await getCollection('posts');
---

<Layout title="Surek András — Blog | Összes">
  <section id="intro" class="container flex justify-center">
    <div class="max-w-xl text-foreground text-justify prose lg:prose-xl">
      <h1 class="text-center text-foreground">Az összes bejegyzés</h1>
    </div>
  </section>

  <section id="posts" class="max-w-xl container mt-8">
    <div class="grid grid-cols-2 justify-between w-full gap-4">
      {posts.map((post) => <BlogPostPreview {post} />)}
    </div>
  </section>
</Layout>
